@model Cost_Management.Models.Invoices
@{
    ViewBag.Title = "C401";
}
@section scripts{
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
   
    @Scripts.Render("~/bundles/jqueryval")
}
<h2>開立發票</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvoicesNum, new { htmlAttributes = new { @class = "form-control", type = "hidden" }
           })
                @Html.ValidationMessageFor(model => model.InvoicesNum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InvoicesTotal, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvoicesTotal, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.InvoicesTotal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerValue, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerValue, new { htmlAttributes = new { @class = "form-control"} })
                @Html.ValidationMessageFor(model => model.CustomerValue, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.orderStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                <font size="5">
               <label> @Html.RadioButtonFor(model => model.orderStatus, "店面自取", new { id = "Choice_1" })店面自取</label>
                <label>@Html.RadioButtonFor(model => model.orderStatus, "外送", new { id = "Choice_2" })外送</label>
                <label>@Html.RadioButtonFor(model => model.orderStatus, "電話自取", new { id = "Choice_3" })電話自取</label>
                    </font>
                @Html.ValidationMessageFor(model => model.orderStatus, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ToolCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" >
                @Html.EditorFor(model => model.ToolCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ToolCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LoveCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LoveCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoveCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tax, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tax, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.Tax, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PayBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <font size="5">
                    <label>@Html.RadioButtonFor(model => model.PayBy, "現金", new { id = "Choice_1" })現金</label>
                    <label>@Html.RadioButtonFor(model => model.PayBy, "信用卡", new { id = "Choice_2" })信用卡</label>
                    <label>@Html.RadioButtonFor(model => model.PayBy, "電商", new { id = "Choice_3" })電商 </label>
                    </font>
                @Html.ValidationMessageFor(model => model.orderStatus, "", new { @class = "text-danger" })
</div>

</div>




<div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="開立發票" class="btn btn-default" />
            </div>
        </div>
    </div>
}

