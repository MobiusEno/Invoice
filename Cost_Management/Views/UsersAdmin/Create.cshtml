@model Cost_Management.Models.RegisterViewModel
@{
    ViewBag.Title = "新增使用者";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Create", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">
            選擇會員權限
        </label>
        <div class="col-md-10">
            @foreach (var item in (SelectList)ViewBag.RoleId)
            {
                <input type="radio" name="SelectedRoles" value="@item.Value" class="radio-inline" />
                @Html.Label(item.Value, new { @class = "control-label" })
            }
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="新增" />
        </div>
    </div>
}
<font size="5">
    <form class="form-horizontal">
        <div class="control-group">
            <font style="background-color:#FFBB73">
                <span style="color:red;">Manager:</span>可新增使用者、修改使用者權限、簽核表單、刪除未簽核完成的申報單。
            </font>
        </div>
        <div class="control-group">
            <br>
        </div>
        <div class="control-group">
            <font style="background-color:#FFBB73">
                <span style="color:red;"> user:</span>可填寫申報單、查詢申報單、修改與刪除該戶之申報單。
            </font>
        </div>
        <div class="control-group">
            <br>
        </div>
        <div class="control-group">
            <font style="background-color:#FFBB73">
                <span style="color:red;">vistor:</span>未開通任何權限。
            </font>
        </div>
    </form>
    <font>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
