@model Cost_Management.Models.StoreInformation

@{
    ViewBag.Title = "StoreInformation";
}
@section scripts{
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/DeleteConfirm.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>店家資訊</h2>
<br>
<div id="content" style="background-color:#EEEEEE;width:10px;height:44%;;float:right;">
</div>
@Html.AntiForgeryToken()


    <div id="content" style="background-color:#EEEEEE;height:350px;width:44%;float:right;">
        <table class="table table-bordered">
            <tr><td style="word-spacing:95px;white-space:nowrap;" align="center"><font size="5">店 家 門 市</font></td><td><p class="text-center"><font size="5">功能</font></p></td></tr>
            @foreach (var item in Model.ListData)
            {
                <tr>
                @if (item.Status)
                {
                    <td >
                        <font style="background-color:#26FF26"> @Html.ActionLink(@item.Store, "StoreInformation", new { ID = item.Id })</font>
                       
                    </td>
                }
                else
                {
                    <td>
                        @Html.ActionLink(@item.Store, "StoreInformation", new { ID = item.Id })
                    </td>
                }
                <td>
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>@Html.ActionLink("刪除", "DeleteStrore", new { ID = item.Id }, new { @class = "Link", @onclick = "return Confirm_Form()" })</td>
                </tr>
            }
            <tr><td colspan="2" align="center"><font style="background-color:#26FF26" size="5">綠底為啟用中的門市</font></td></tr>
        </table>
</div>

